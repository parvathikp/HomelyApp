<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="400dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="#E57373"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="10dp"
    android:layout_gravity="center_horizontal"
    app:cardUseCompatPadding="true">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cat"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttontype"
                android:text="SALE"
                android:textColor="#FF6F00"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:id="@+id/saleType"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttontype"
                android:text="100000000 SQFT"
                android:textAlignment="center"
                android:layout_marginStart="20dp"
                android:textColor="#FF6F00"
                android:id="@+id/sqft"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttontype"
                android:text="100 BHK"
                android:layout_marginStart="20dp"
                android:textColor="#FF6F00"
                android:id="@+id/bedr"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:text="PLACE: "
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WEST MARREDPALLY"
                        android:layout_marginStart="5dp"
                        android:textAlignment="viewStart"
                        android:textColor="#E0E0E0"
                        android:textSize="15sp"
                        android:id="@+id/place"
                        android:textStyle="bold"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:text="TYPE: "
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BUNGALOW"
                        android:layout_marginStart="5dp"
                        android:textAlignment="viewStart"
                        android:id="@+id/type"
                        android:textColor="#E0E0E0"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="6dp"
                android:layout_gravity="end"
                android:orientation="vertical"
                android:background="@drawable/buttontype"
                android:backgroundTint="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10000000000"
                    android:id="@+id/price"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>